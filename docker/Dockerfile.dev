FROM python:3.12-slim

RUN apt-get update --fix-missing && apt-get install -y \
    openssl \
    libglib2.0-0 \
    build-essential \
    tzdata \
    wget \
    ffmpeg \
    gnupg \
    pulseaudio \
    pulseaudio-utils \
    alsa-utils \
    ca-certificates \
    fonts-liberation \
    libnss3 \
    libgbm1 \
    libasound2 \
    && ln -fs /usr/share/zoneinfo/UTC /etc/localtime \
    && dpkg-reconfigure --frontend noninteractive tzdata \
    && rm -rf /var/lib/apt/lists/*

# Install Google Chrome
RUN wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | apt-key add -
RUN echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list
RUN apt-get update && apt-get install -y google-chrome-stable && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

ENV PYTHONPATH="${PYTHONPATH}:/app/scrum_master"
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV UV_COMPILE_BYTECODE=1
ENV UV_PROJECT_ENVIRONMENT=/app/.venv

WORKDIR /app

# Copy lock files and sync deps (with cache mount)
COPY pyproject.toml uv.lock ./
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --locked --no-install-project

COPY . /app

# Full sync (install project too, with cache)
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --locked

# Expose
EXPOSE 8000

# Default CMD (override in compose for dev)
CMD ["uv", "run", "uvicorn", "scrum_master.main:create_app", "--factory", "--host", "0.0.0.0", "--port", "8000"]